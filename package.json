{
  "name": "electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.electronapp",
    "productName": "MyElectronApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "node_modules/screenshot-desktop/**"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "sign": false
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "axios": "^1.12.2",
    "screenshot-desktop": "^1.15.2"
  }
}
